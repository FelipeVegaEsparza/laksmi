# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - EASYPANEL
# ============================================

# Dominio principal (sin https://)
DOMAIN=tu-dominio.com

# ============================================
# BASE DE DATOS MYSQL
# ============================================
MYSQL_ROOT_PASSWORD=tu_password_root_super_seguro_aqui
MYSQL_DATABASE=clinica_belleza
MYSQL_USER=clinica_user
MYSQL_PASSWORD=tu_password_mysql_super_seguro_aqui

# ============================================
# REDIS CACHE
# ============================================
REDIS_PASSWORD=tu_password_redis_super_seguro_aqui

# ============================================
# JWT SECRETS
# ============================================
# Genera con: openssl rand -base64 32
JWT_SECRET=tu_jwt_secret_super_seguro_de_32_caracteres_minimo
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_super_seguro_de_32_caracteres
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# TWILIO WHATSAPP
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=tu_twilio_auth_token_aqui
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://api.tu-dominio.com/api/v1/twilio/webhook/receive

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4

# ============================================
# URLs DE LA APLICACIÓN
# ============================================
FRONTEND_URL=https://tu-dominio.com
DASHBOARD_URL=https://dashboard.tu-dominio.com
CORS_ORIGINS=https://tu-dominio.com,https://dashboard.tu-dominio.com,https://www.tu-dominio.com

# ============================================
# SEGURIDAD
# ============================================
# Genera con: openssl rand -hex 32
ENCRYPTION_KEY=tu_encryption_key_de_64_caracteres_hexadecimal_aqui
